<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/lists_container_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/list_fragment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bottomMenu_list"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/textView_topTenTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textView_top10"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Nagłówki tabeli -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="#"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="4dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/textView_username"
                android:textStyle="bold"
                android:gravity="start"
                android:padding="4dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/textView_userPoints"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/player_ranks_list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

    </LinearLayout>
</ScrollView>